{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "index.ts",
    "global.d.ts",
    "types/**/*",
    "routes/**/*",
    "middleware/**/*",
    "docs/**/*",
    "controller/**/*",
    "config/**/*"
  ]
}